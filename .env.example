# Environment Variables Template
# Copy this file to .env and fill in the values

# Database URL (SQLite)
DATABASE_URL="file:./dev.db"

# JWT Secret - IMPORTANT: Change this to a secure random string in production!
# Generate one with: openssl rand -base64 32
JWT_SECRET="your-secure-random-secret-here-change-in-production"

# Site URL for server-side API calls
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Uploads Directory (optional, defaults to ./uploads)
# In production, the deployment workflow automatically sets this to persistent storage
# UPLOADS_DIR="/var/app-data/pustakasetia/uploads"

# Google Analytics (optional)
# GA_PROPERTY_ID="your-ga-property-id"
# GA_CLIENT_EMAIL="your-service-account@email.com"
# GA_PRIVATE_KEY="your-private-key"
