// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  books       Book[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Book {
  id         Int        @id @default(autoincrement())
  title      String
  author     String
  pages      Int
  size       String
  isbn       String     @unique
  price      Float
  edition    String
  paper_type String     @default("HVS")
  synopsis   String?
  image      String?
  stock      Int        @default(0)
  categoryId Int
  sold       Int        @default(0)
  category   Category   @relation(fields: [categoryId], references: [id])
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  bookSales  BookSale[]
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  fullName  String
  password  String
  roleId    Int
  role      Role     @relation(fields: [roleId], references: [id])
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Analytics & Tracking Models

model PageView {
  id         Int      @id @default(autoincrement())
  visitorId  String // Anonymous visitor identifier (UUID from cookie)
  page       String // Page URL
  userAgent  String? // User agent string
  deviceType String? // mobile, desktop, tablet
  referrer   String? // Traffic source/referrer
  createdAt  DateTime @default(now())

  @@index([createdAt])
  @@index([deviceType])
  @@index([visitorId])
}

model TrafficSource {
  id          Int      @id @default(autoincrement())
  source      String // google, instagram, tiktok, direct, link
  visitorId   String // Anonymous visitor identifier
  sessions    Int      @default(1)
  bounceRate  Float? // Percentage
  avgDuration Int? // Average session duration in seconds
  createdAt   DateTime @default(now())

  @@index([source])
  @@index([createdAt])
  @@index([visitorId])
}

model BookSale {
  id         Int      @id @default(autoincrement())
  bookId     Int
  book       Book     @relation(fields: [bookId], references: [id])
  quantity   Int      @default(1)
  totalPrice Float // Total price
  createdAt  DateTime @default(now())

  @@index([createdAt])
  @@index([bookId])
}
